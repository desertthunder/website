---
import Base from "$layouts/Base.astro";

const books = [
  "Slaughterhouse-Five (Vonnegut)",
  "The Crossing (McCarthy)",
  "The End of Eternity (Asimov)",
  "Dark Lord of Derkholm (Wynne Jones)",
  "Guards! Guards! (Pratchett)",
];

const skills = ["Go", "Rust", "Flutter", "Python", "React", "TypeScript"];
const hobbies = ["Writing", "Reading", "Programming", "Video Games", "RPGs"];
---

<Base title="About â€” Owais Jamil" description="About Owais Jamil" ogImage="/og/page/home.png">
  <article class="prose max-w-none">
    <section class="mb-12">
      <h2 class="text-3xl md:text-4xl text-cyan mb-6">About Me</h2>
      <p class="text-lg mb-4">
        I'm <strong class="text-fg">Owais J.</strong>, a software engineer with a passion for learning. In late 2024 I
        started a company called
        <a href="https://stormlightlabs.org" class="text-cyan hover:underline">Stormlight Labs</a> that focuses on engineering
        projects that serve the community and help others. My greatest joy comes from learning and sharing knowledge with
        others.
      </p>
    </section>

    <section class="mb-12">
      <h3 class="text-2xl md:text-3xl text-blue mb-4">Skills</h3>
      <div class="flex flex-wrap gap-2">
        {skills.map((skill) => <span class="tag">{skill}</span>)}
      </div>
    </section>

    <section class="mb-12">
      <h3 class="text-2xl md:text-3xl text-blue mb-4">Hobbies & Interests</h3>
      <div class="flex flex-wrap gap-2">
        {hobbies.map((hobby) => <span class="tag">{hobby}</span>)}
      </div>
    </section>

    <section class="mb-12">
      <h3 class="text-2xl md:text-3xl text-blue mb-4">Currently Working On</h3>
      <p class="text-lg">
        <a href="https://stormlightlabs.org" class="text-cyan hover:underline font-bold">Stormlight Labs</a>
      </p>
    </section>

    <section class="mb-12">
      <h3 class="text-2xl md:text-3xl text-blue mb-4">Currently Reading</h3>
      <p class="text-lg">Effective C</p>
    </section>
  </article>
</Base>
