---
import Icon from "./Icon.astro";

type SocialLink = { name: "gh" | "bluesky" | "linkedin"; url: string; alt?: string };
type Props = { name: string; socialLinks: Array<SocialLink> };

const { name, socialLinks } = Astro.props;
const currentYear = new Date().getFullYear();
---

