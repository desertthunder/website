---
import Icon from "./Icon.astro";

type SocialLink = { label: string; name: "gh" | "bluesky" | "linkedin"; url: string; alt?: string };
type Props = { name: string; socialLinks: Array<SocialLink> };

const { name, socialLinks } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer class="grid grid-cols-2">
  Â© {currentYear}
  {name}
  <section class="flex flex-col">
    {
      socialLinks.map((link) => (
        <a href={link.url} target="_blank" rel="noopener noreferrer">
          <Icon name={link.name} alt={link.alt || link.name} />
          <span>{link.label}</span>
        </a>
      ))
    }
  </section>
</footer>
