---
type SocialLink = { label: string; name: "gh" | "bluesky" | "linkedin"; url: string; alt?: string };
type Props = {
  name: string;
  socialLinks: { linkedin: string; bluesky: string; gh: string; tangled: string; codeberg: string };
};

const { name, socialLinks } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer class="p-2 border-t font-serif border-dotted border-line text-base grid grid-cols-2">
  <section>
    <a href="https://curius.app/owais-jamil" target="_blank" rel="noopener noreferrer">Curius</a>
  </section>
  <section class="flex flex-col items-end justify-start">
    <div>Desert Thunder</div>
    <div>Made {currentYear} by {name}</div>
    <div>
      <span>Find me on:</span>
      <a href={socialLinks.linkedin} target="_blank" rel="noopener noreferrer">LinkedIn</a>, and
      <a href={socialLinks.bluesky} target="_blank" rel="noopener noreferrer">Bluesky</a>
    </div>
    <div>
      <span>View my work:</span>
      <a href={socialLinks.gh} target="_blank" rel="noopener noreferrer">GitHub</a> and
      <a href={socialLinks.tangled} target="_blank" rel="noopener noreferrer">Tangled</a>
    </div>
  </section>
</footer>
