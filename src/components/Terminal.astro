---
type Props = { title?: string };
const { title } = Astro.props;
---

<section data-term class="bg-panel border border-line rounded-xl shadow-custom my-8 overflow-hidden">
  <header class="flex items-center gap-2 px-3.5 py-2.5 border-b border-b-line text-muted">
    <span data-dot class="bg-red"></span>
    <span data-dot class="bg-yellow"></span>
    <span data-dot class="bg-green"></span>
    {title ? <span>&nbsp;~/{title}/</span> : <span>&nbsp;/home/</span>}
  </header>
  <div class="m-0 p-4 px-4.5">
    <slot />
  </div>
</section>

<style>
  @reference "../styles/global.css";

  section[data-term] header {
    background: color-mix(in oklab, var(--color-panel), black 12%);
  }

  span[data-dot] {
    @apply w-3 h-3 rounded-[50%] inline-block;
  }
</style>
