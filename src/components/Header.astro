---
/**
 * Site header component displaying the main site title.
 * Future-proofed with optional subtitle support.
 */
interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<header>
  <h1>{title}</h1>
  {subtitle && <p class="subtitle">{subtitle}</p>}
</header>
