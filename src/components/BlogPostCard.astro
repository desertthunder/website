---
import "$styles/cards.css";

type Props = { slug: string; title: string; description: string; date: Date; tags: string[] };

const { slug, title, description, date, tags } = Astro.props;
const dateStr = date.toLocaleDateString("en-US", { year: "numeric", month: "short", day: "numeric" });
---

<article class="tui-card">
  <a href={`/blog/${slug}`} class="card-link">
    <header>
      <h3 class="title">{title}</h3>
      <time datetime={date.toISOString()} class="date">{dateStr}</time>
    </header>
    <p class="description">{description}</p>
  </a>
  {
    tags.length > 0 && (
      <div class="tags">
        {tags.map((tag) => (
          <a href={`/tags/${tag}`} class="tag">
            {tag}
          </a>
        ))}
      </div>
    )
  }
</article>
